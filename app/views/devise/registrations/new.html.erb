<div class="devise-inner">

<%= form_with model: @user, url: "/users", class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>
  <br>

  <%= render 'shared/error_messages', model: f.object %>
  <br>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">（15文字以下）</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"15文字以下", maxlength:"15"%>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable"></span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">(6文字以上)</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable"></span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">

  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable"></span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

  <div class="coin-field">
    <%= f.hidden_field :coin, class:"input-default", id:"coin", value: 1, readonly: true%>
  </div>
  <div class="icon-field">
    <%= f.hidden_field :icon_ids, class:"input-default", id:"icon_ids", value: 1, readonly: true%>
  </div>
  <br>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn user-button" %>
  </div>

</div>
<% end %>



</div>