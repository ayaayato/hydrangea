<% unless current_user == user %>
  <% if current_user.liking?(user) %>
    <%= form_for(current_user.loves.find_by(like_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :like_id, user.id %>
      <%= f.submit 'UNLOVE', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.loves.build) do |f| %>
      <%= hidden_field_tag :like_id, user.id %>
      <%= f.submit 'LOVE', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>