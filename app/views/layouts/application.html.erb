<!DOCTYPE html>
<html>
  <head>
    <title>Hydrangea</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="header">
        <div class="left">
         <h1 class="title"><a href="/">hydrangea</a></h1>
        </div>
        <div class="side">
        <% if user_signed_in?%>
        <a class="post" href="/users/edit">
          編集
          </a>
          <a class="post" href="/">
          <%=current_user.nickname %>
          </a>
          <b>
          <%=current_user.coin %>
          </b>
          <% end %>
          <a class="post" href="/users/sign_up">新規登録</a>
          <a class="post" href="/flowers/new">投稿する</a>
        </div>
    </header>

    <%= yield %>


  </body>
</html>
