<!DOCTYPE html>
<html>
  <head>
    <title>Hydrangea</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="icon" href="/assets/favicon.ico">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="header">
      <div class="left">
        <div class="index-btn">
         <a href="/">
          <img src="/assets/b1.png" class="blue-icon" >
         </a>
        </div>
        <div class="fav-btn">
         <div class="fav-flowerbtn">
          <img src="/assets/p1.png" class="fav-icon icons">
         </div>
         <div class="fav-userbtn">
          <img src="/assets/r1.png" class="fav-icon icons">
         </div>
        </div>
      </div>

      <div class="right">
        <% if user_signed_in?%>
        <div class="new-btn">
        <!--<a class="post" href="/flowers/new">-->
          <img src="/assets/new1.png" class="new-icon icons">
        <!--  </a>-->
        </div>
        <div class="seach-btn">
        <a class="post" href="/">
        <img src="/assets/seach1.png" class="seach-icon icons">
        </a>
        </div>
        <div class="user-btn">
        <a class="post" href="/users/edit">
          <img src="/assets/user2.png" class="user-icon icons">
          <b class="user-text">
          <%=current_user.nickname %>
          </b>
          </a>
        </div>
        <div class="coin-btn">
          <img src="/assets/coin2.png" class="coin-icon icons">
          <b class="coin-text">
          <%=current_user.coin %>
          </b>
        </div>
          <% end %>
          <a class="post" href="/users/sign_up">
          </a>
       </div>
    </header>

  <div class="new-modal-wrapper" id = "new-modal">
    <div class="modal">
      <div id="new-form">

        <!-- renderにする-->
      <h2 class="flower-new-title">投稿する</h2>
    <%= form_with(model: @flower, local: true) do |f| %>

    <div class="img-upload">
      <div class="weight-bold-text">
        画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"flower-image" %>
      </div>
    </div>

    <div class="new-flower">
      <div class="weight-bold-text">
        題名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"flower-text", id:"flower-name", placeholder:"題名", maxlength:"20" %>
      <div class="flower-explain">
        <div class="weight-bold-text">
          場所
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_area :place, class:"flower-text", id:"flower-info", placeholder:"場所" ,maxlength:"20" %>
      </div>
    </div>

    <div class="flower-detail">
      <div class="weight-bold-text">詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"flower-category"}) %>
        <div class="weight-bold-text">
          カテゴリー2
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:subcategory_id, Subcategory.all, :id, :name, {}, {class:"select-box", id:"flower-subcategory"}) %>
      </div>
    </div>

    <div class="send-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
    </div>

  <% end %>
        <!-- renderにする-->
      </div>
      <div class = "close-modal">
        <img src="/assets/close1.png" class="close-icon icons">
      </div>
    </div>
  </div>

  <div class="main">
    <%= yield %>
  </div>
<script href="head.js"></script>
  </body>
</html>
