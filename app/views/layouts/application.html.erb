<!DOCTYPE html>
<html>
  <head>
    <title>Hydrangea</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="header">
      <div class="left">
        <div class="index-btn">
         <a href="/">
          <img src="/assets/b1.png" class="blue-icon" >
         </a>
        </div>
        <div class="fav-btn">
         <div class="fav-flowerbtn">
          <img src="/assets/p1.png" class="fav-icon">
         </div>
         <div class="fav-userbtn">
          <img src="/assets/r1.png" class="fav-icon">
         </div>
        </div>
      </div>
      
      <div class="right">
        <% if user_signed_in?%>
        <div class="new-btn">
        <a class="post" href="/flowers/new">
          <img src="/assets/new1.png" class="new-icon">
          </a>
        </div>
        <div class="seach-btn">
        <a class="post" href="/">
        <img src="/assets/seach1.png" class="seach-icon">
        </a>
        </div>
        <div class="user-btn">
        <a class="post" href="/users/edit">
          <img src="/assets/user2.png" class="user-icon">
          <b class="coin-text">
          <%=current_user.nickname %>
          </b>
          </a>
        </div>
        <div class="coin-btn">
          <b class="coin-text">
          <img src="/assets/coin2.png" class="coin-icon">
          <%=current_user.coin %>
          </b>
        </div>
          <% end %>
          <a class="post" href="/users/sign_up">
          </a>
       </div>
    </header>
  <div class="main">
    <%= yield %>
  </div>

  </body>
</html>
